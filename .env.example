# ================================
# Clara - Environment Variables
# ================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ================================
# App Configuration
# ================================
VITE_APP_NAME=Clara
VITE_APP_URL=http://localhost:5173
VITE_APP_VERSION=0.1.0

# ================================
# Analytics (optional for local dev)
# ================================
# Google Analytics 4
VITE_GA_TRACKING_ID=

# Plausible Analytics (privacy-friendly alternative)
VITE_PLAUSIBLE_DOMAIN=

# ================================
# Feature Flags
# ================================
# Enable/disable features during development
VITE_ENABLE_AI_FEATURES=false
VITE_ENABLE_BATCH_GENERATION=true
VITE_ENABLE_INTERIOR_BUILDER=false
VITE_ENABLE_USER_ACCOUNTS=false

# ================================
# Rate Limits (Free Tier)
# ================================
VITE_MAX_FREE_PUZZLES=25
VITE_MAX_GRID_SIZE_FREE=20
VITE_MAX_BATCH_SIZE_FREE=1

# ================================
# Phase 4: Backend Services
# ================================
# Uncomment and fill when implementing backend features

# Database (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/clara

# Authentication (Clerk)
# CLERK_SECRET_KEY=sk_live_xxxxx
# VITE_CLERK_PUBLISHABLE_KEY=pk_live_xxxxx

# Payment (Stripe)
# STRIPE_SECRET_KEY=sk_live_xxxxx
# VITE_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# AI Features (OpenAI)
# OPENAI_API_KEY=sk-xxxxx
# OPENAI_MODEL=gpt-3.5-turbo
# OPENAI_MAX_TOKENS=500

# File Storage (AWS S3 or Cloudflare R2)
# AWS_ACCESS_KEY_ID=xxxxx
# AWS_SECRET_ACCESS_KEY=xxxxx
# AWS_S3_BUCKET=clara-user-files
# AWS_REGION=us-east-1

# ================================
# Development Tools
# ================================
# Enable debug mode
VITE_DEBUG=false

# Enable performance monitoring
VITE_PERFORMANCE_MONITORING=false

# API base URL (for backend API calls)
# VITE_API_URL=http://localhost:3000/api

# ================================
# Production Settings
# ================================
# Set to 'production' when deploying
NODE_ENV=development

# ================================
# Notes
# ================================
# - All VITE_ prefixed variables are exposed to the client
# - Never put secrets in VITE_ variables
# - Backend-only secrets (like STRIPE_SECRET_KEY) are safe
